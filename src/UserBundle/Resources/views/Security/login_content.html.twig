{% if error %}
    <div class="alert alert-danger">
        Login ou mot de passe oncorrect.
    </div>
{% endif %}

<div id="loginbox">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-vertical">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <div class="control-group normal_text"><h3><img src="{{ asset('TemplateFront/img/logo.png') }}" alt="Logo" style="max-width: 41%;"/></h3></div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">

                    <span class="add-on"><i class="icon-user"></i></span>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Login"/>


                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on"><i class="icon-lock"></i></span>
                    <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>

                </div>
            </div>
        </div>
        <div class="form-actions">
                <span class="pull-right">
                     <input type="submit" id="_submit" name="_submit" value="Connexion" />
                </span>
        </div>
    </form>

</div>

